<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-100 px-4 py-5 md:px-10">
    <h1 class="text-2xl md:text-3xl text-center md:text-left">Create a new blog</h1>
    <hr class="w-full md:w-1/3 mx-auto md:mx-0 my-4">
    <form action="/createpost" method="post" enctype="multipart/form-data" class="flex flex-col items-center md:items-start">
        <input class="block w-full md:w-1/3 px-3 py-2 mt-5 border rounded-md" type="file" name="postimage">
        <input class="block w-full md:w-1/3 px-3 py-2 border-2 mt-2 rounded-md" type="text" placeholder="Caption" name="caption">
        <textarea class="block w-full md:w-1/3 px-3 py-40 border-2 mt-2 rounded-md" placeholder="Write your content here..." name="description"></textarea>
        <input class="block w-full md:w-1/3 px-3 py-2 border-2 mt-2 text-white text-l rounded-md bg-purple-800 cursor-pointer" type="submit" value="Add post">
    </form>
</div>

