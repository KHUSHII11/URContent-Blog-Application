<% include ./partials/header.ejs %>
<div class="profile min-h-screen bg-zinc-100 flex flex-col md:flex-row">
    <!-- Profile Picture Section -->
    <div class="w-full md:w-1/3 bg-zinc-200 flex-shrink-0">
        <div class="p-4 text-center">
            <div class="relative mb-4">
                <span id="uploadicon" class="w-8 h-8 absolute bottom-0 right-0 flex items-center justify-center rounded-full bg-zinc-300 cursor-pointer">
                    <i class="ri-pencil-fill"></i>
                </span>
                <div class="mt-5 w-40 h-40 bg-zinc-100 rounded-full overflow-hidden mx-auto">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="Profile Image">
                </div>
            </div>
            <h1 class="text-3xl font-semibold text-black mb-2"> <%= user.username %> </h1>
            <h3 class="text-md font-semibold text-gray-700 mb-4"> <%= user.email %> </h3>
            <div class="flex justify-center align-items-center space-x-2 mb-4">
                <a href="/add" class="px-4 py-2 bg-purple-900 font-semibold rounded-full text-sm text-white"> New blog </a>
                
                <a href="/show/allposts" class="px-4 py-2 bg-purple-900 font-semibold rounded-full text-sm text-white"> All blogs [<%= user.posts.length %>] </a>
            </div>
        </div>
    </div>
    <!-- Blogs Section -->
    <div class="cards flex flex-wrap gap-6 p-4 md:w-2/3">
        <% user.posts.forEach(function(elem){ %>
        <div class="card w-full md:w-80 h-64 bg-zinc-200">
            <div class="w-full h-48 overflow-hidden">
                <a href="/show/<%= elem.id %>"><img class="w-full h-full  object-cover" 
                src='/images/uploads/<%= elem.image %>' alt="<%= elem.caption %>"></a>
            </div>
            <div class="w-full p-2 bg-zinc-200">
                <a href="/show/<%= elem.id %>" class="block text-xl font-bold text-black-600 truncate"><%= elem.caption %></a>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<script>
    document.querySelector("#uploadicon").addEventListener('click', function() {
        document.querySelector("#uploadform input").click();
    })
    document.querySelector("#uploadform input").addEventListener('change', function() {
        document.querySelector("#uploadform").submit();
    })
</script>
<% include ./partials/footer.ejs %>
